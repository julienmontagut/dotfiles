# layout
yabai -m config layout bsp
#yabai -m config --space 1 layout float

# Padding
yabai -m config top_padding    12
yabai -m config bottom_padding 12
yabai -m config left_padding   12
yabai -m config right_padding  12
yabai -m config window_gap     12

# Mouse
yabai -m config mouse_follows_focus on
yabai -m config focus_follows_mouse autoraise

# Ignored windows
yabai -m rule --add app='^Réglages Système$' manage=off
yabai -m rule --add app='^Informations système$' manage=off
yabai -m rule --add app='^Utilitaire d’archive$' manage=off
yabai -m rule --add app='^Rappels$' manage=off
yabai -m rule --add app='^Safari$' title='^(Général|Onglets|Remplissage automatique|Mots de passe|Recherche|Sécurité|Confidentialité|Sites web|Profils|Extensions|Avancés)$' manage=off
yabai -m rule --add app='^Mail$' title='^(Général|Comptes|Courrier indésirable|Polices/Couleurs|Présentation|Rédaction|Signatures|Règles|Extensions|Confidentialité)$' manage=off
yabai -m rule --add app='^AdBlock Pro$' manage=off
yabai -m rule --add app='^Parallels Desktop$' manage=off
yabai -m rule --add app='^Proton Drive$' title='^Proton Drive Settings$' manage=off

